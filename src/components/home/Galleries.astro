---
import Category from "@/assets/icons/category.astro";
import ArrowRight from "@/assets/icons/arrow-right.astro";
import Blocks from "@/assets/icons/blocks.astro";
import CodeIcon from "@/assets/icons/codeIcon.astro";
import Template from "@/assets/icons/template.astro";
---
<section class="animate-fade-in-up grid grid-cols-1 md:grid-cols-2 gap-4 max-w-4xl justify-center mx-auto auto-rows-fr">

  <a href="/components" class="group block transition-all duration-500 hover:scale-[1.02]">
    <article class="relative bg-surface/70 border-border border rounded-2xl overflow-hidden transition-all duration-300 p-8">
    
      <div class="relative z-10">
        <div class="flex items-start justify-between mb-6">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-gradient-to-br from-zinc-700/40 to-black/40 border border-gray-600/40 rounded-xl flex items-center justify-center group-hover:scale-110 transition-all duration-300">
              <CodeIcon class="w-6 h-6 text-slate-700 group-hover:text-slate-500 transition-colors" />
            </div>
            <div>
              <h3 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-gray-200 via-white to-gray-200 group-hover:from-blue-200 group-hover:via-blue-100 group-hover:to-blue-200 transition-all duration-300">
                Components
              </h3>
            </div>
          </div>
        </div>

        <p class="text-gray-300 mb-8 text-lg leading-relaxed group-hover:text-gray-200 transition-colors duration-300">
        Gallery of individual components to easily integrate into your project. Go use them!
        </p>

        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <span class="inline-flex items-center text-slate-500 group-hover:text-slate-200 transition-all duration-300 text-lg font-medium group-hover:scale-105">
                    Explore
              <ArrowRight class="ml-2 mt-1 size-5 group-hover:translate-x-1 transition-transform duration-300"/>
            </span>
          </div>
        </div>
      </div>

      <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 via-purple-600/10 to-blue-600/10 rounded-2xl"></div>
      </div>
    </article>
  </a>
  <a href="/blocks" class="group block transition-all duration-500 hover:scale-[1.02]">
    <article class="relative bg-surface/70 border-border border rounded-2xl overflow-hidden transition-all duration-300 p-8">
    
      <div class="relative z-10">
        <div class="flex items-start justify-between mb-6">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-gradient-to-br from-zinc-700/40 to-black/40 border border-gray-600/40 rounded-xl flex items-center justify-center group-hover:scale-110 transition-all duration-300">
              <Blocks class="w-6 h-6 text-slate-700 group-hover:text-slate-500 transition-colors" />
            </div>
            <div class="flex items-center gap-3">
              <h3 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-gray-200 via-white to-gray-200 group-hover:from-blue-200 group-hover:via-blue-100 group-hover:to-blue-200 transition-all duration-300">
                Blocks
              </h3>
              <span class="mt-1 px-2 py-1 text-xs font-medium bg-blue-500/10 text-blue-400 rounded-full border border-blue-500/20">
                1 new!
              </span>
            </div>
          </div>
        </div>

        <p class="text-gray-300 mb-8 text-lg leading-relaxed group-hover:text-gray-200 transition-colors duration-300">
        Collection of ready-to-use blocks to build your website faster. Mix and match them!
        </p>

        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <span class="inline-flex items-center text-slate-500 group-hover:text-slate-200 transition-all duration-300 text-lg font-medium group-hover:scale-105">
                    Explore
              <ArrowRight class="ml-2 mt-1 size-5 group-hover:translate-x-1 transition-transform duration-300"/>
            </span>
          </div>
        </div>
      </div>

      <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 via-purple-600/10 to-blue-600/10 rounded-2xl"></div>
      </div>
    </article>
  </a>
  <a href="/sections" class="col-span-1 md:col-span-2 group block transition-all duration-500 hover:scale-[1.02]">
      <article class="relative bg-surface/70 border-border border rounded-2xl overflow-hidden transition-all duration-300 p-8">
      
        <div class="relative z-10">
          <div class="flex items-start justify-between mb-6">
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 bg-gradient-to-br from-zinc-700/40 to-black/40 border border-gray-600/40 rounded-xl flex items-center justify-center group-hover:scale-110 transition-all duration-300">
                <Template class="w-6 h-6 text-slate-700 group-hover:text-slate-500 transition-colors" />
              </div>
              <div class="flex items-center gap-3">
                <h3 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-gray-200 via-white to-gray-200 group-hover:from-blue-200 group-hover:via-blue-100 group-hover:to-blue-200 transition-all duration-300">
                  Sections
                </h3>
                <span class="mt-1 px-2 py-1 text-xs font-medium bg-indigo-500/10 text-indigo-400 rounded-full border border-indigo-500/20">
                  2 new!
                </span>
              </div>
            </div>
          </div>
  
          <p class="text-gray-300 mb-8 text-lg leading-relaxed group-hover:text-gray-200 transition-colors duration-300">
          A collection of ready-to-use sections for your next amazing website. Build in seconds!
          </p>
  
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="inline-flex items-center text-slate-500 group-hover:text-slate-200 transition-all duration-300 text-lg font-medium group-hover:scale-105">
                      Explore
                <ArrowRight class="ml-2 mt-1 size-5 group-hover:translate-x-1 transition-transform duration-300"/>
              </span>
            </div>
          </div>
        </div>
  
        <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none">
          <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 via-purple-600/10 to-blue-600/10 rounded-2xl"></div>
        </div>
      </article>
  </a>

</section>


<script is:inline>
  const cards = document.querySelectorAll('article');

  cards.forEach(card => {
    card.addEventListener('mousemove', (e) => {
      const rect = card.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      
      const glowElement = card.querySelector('.absolute.inset-0.opacity-0');
      if (glowElement) {
        const glowDiv = glowElement.querySelector('div');
        if (glowDiv) {
          glowDiv.style.background = `radial-gradient(circle 200px at ${x}px ${y}px, rgba(59, 130, 246, 0.15), transparent 70%)`;
        }
      }
    });


  });
</script>
