---
import Github from "@/assets/icons/github.astro"
import Discord from "@/assets/icons/discord.astro"
import Coffee from "@/assets/icons/coffee.astro"

const EXTERNALS = [
  {
    label: "Github",
    href: "https://github.com/Arturooiwnl/ui-components-orbitui",
    icon: Github,
    tooltip: "Github",
  },
  {
    label: "Discord",
    href: "https://discord.gg/X9h7q2Z6B2",
    icon: Discord,
    tooltip: "Discord",
  },
];

---

<footer class={`bg-surface/60 border border-zinc-800 rounded-lg shadow-sm`}>
    <div class="w-full mx-auto max-w-screen-xl flex flex-col items-center gap-2 justify-center p-4 md:flex-row md:items-center md:justify-between">
      <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400">Â© 2025 UIComponents.
    </span>

    <span class="md:mt-1 flex gap-1 items-center text-gray-500 text-xs">
        Made with <Coffee class="size-5 text-[#573725]"/> by 
        <a class="hover:text-white transition-all duration-300" aria-label="Go to portfolio" target="_blank" href="https://arturoiwnl.pro/">
        Arturoiwnl
        </a>
    </span>

    <div class="flex gap-5 items-center">
        {EXTERNALS.map((link) => (
            <a 
            class="text-gray-500 hover:text-white transition-all duration-300"
            target="_blank" 
            role="link"
            aria-label={`Go to ${link.label}`} href={link.href}>
                <link.icon class="size-5"/>
            </a>
            ))}
    </div>

    </div>
</footer>
