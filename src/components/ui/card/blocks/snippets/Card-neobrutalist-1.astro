---
import {
  Card,
  CardHeader,
  CardTitle,
  CardDescription,
  CardContent,
  CardFooter,
} from "@/components/ui/card";
---

<Card class="bg-white border-2 border-black shadow-[6px_6px_0_#000] text-black rounded-none">
