---
import {description, siteName, imageMetaAlt} from './constLayout'

import '@fontsource/audiowide';
import '../styles/global.css';
import Footer from '@/components/home/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/icon.webp" />
	<meta name="description" content={description}/>
	<meta property="og:title" content={siteName} />
	<meta property="og:type" content="website" />
	<meta property="og:url" content="https://ui-components-orbitui.vercel.app/" />
	<meta property="og:locale" content="es" />
	<meta property="og:description" content={description}/>
	<meta property="og:site_name" content={siteName} />
	<meta property="og:image" content="https://ui-components-orbitui.vercel.app/og/og.png" />
	<meta property="og:image:alt" content={imageMetaAlt} />
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:site" content="@ArturoPerotto" />
	<meta name="twitter:title" content={siteName} />
	<meta name="twitter:description" content={description}/>
	<meta name="twitter:image" content="https://ui-components-orbitui.vercel.app/og/og.png" />
	<meta name="twitter:image:alt" content={imageMetaAlt} />
	<meta name="robots" content="max-image-preview:large" />
    <title>{title}</title>
</head>
<body class="relative bg-slate-950">
	<div class="fixed inset-0 -z-10 w-full min-h-screen bg-zinc-950">
		<div class="absolute inset-0 [mask-image:linear-gradient(to_left,transparent,black_40%,black_80%,transparent)] [--webkit-mask-image:linear-gradient(to_right,transparent,black_40%,black_80%,transparent)]">
			<div class="absolute inset-0 opacity-30" />
				<svg
					class="w-full h-full"
					width="100%"
					height="100%"
					viewBox="0 0 1920 1080"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
				>
					<g stroke="white" stroke-opacity="0.08">
						<line x1="100" y1="0" x2="100" y2="1080" />
						<line x1="300" y1="0" x2="300" y2="1080" />
						<line x1="550" y1="0" x2="550" y2="1080" />
						<line x1="900" y1="0" x2="900" y2="1080" />
						<line x1="1200" y1="0" x2="1200" y2="1080" />
						<line x1="1450" y1="0" x2="1450" y2="1080" />
						<line x1="1700" y1="0" x2="1700" y2="1080" />
						<line x1="0" y1="80" x2="1920" y2="80" />
						<line x1="0" y1="220" x2="1920" y2="220" />
						<line x1="0" y1="400" x2="1920" y2="400" />
						<line x1="0" y1="700" x2="1920" y2="700" />
						<line x1="0" y1="950" x2="1920" y2="950" />
					</g>
				</svg>
		  </div>
	</div>
	<main>
		<slot />
    <div class="max-w-3xl mx-auto mt-10 mb-24 lg:mb-5">
      <Footer/>
    </div>
	</main>
</body>
</html>

<script is:inline>

    const code = document.querySelector("code");
    const copyBtn = document.querySelector('.copy-button');
    const copyIcon = document.querySelector('.copy-icon');
    const copyIconCheck = document.querySelector('.copy-icon-check');
    
    copyBtn.addEventListener('click', () => {
        navigator.clipboard.writeText(code.textContent)
            .then(() => {
                copyIcon.classList.toggle("hidden")
                copyIconCheck.classList.toggle("hidden")
                setTimeout(() => {
                    copyIcon.classList.toggle("hidden")
                    copyIconCheck.classList.toggle("hidden")
                }, 2000);
            })
            .catch(err => {
                console.error("An error occurred while copying the text: ", err);
            });
    });

	const codeBlock = document.querySelector(".astro-code")
	const componentName = document.querySelector(".component-name")
	codeBlock.className = "rounded-xs p-3 border border-gray-500/50 group-hover:border-gray-500/80 transition-all duration-300"
	componentName.className = "absolute top-4.5 left-3 bg-[#24292e] w-fit ml-5 mb-1.5 border-r border-l border-t border-gray-500/50 group-hover:border-gray-500/80 text-gray-800 dark:text-gray-300 text-xs px-5 py-1 rounded-sm font-mono"

</script>

<style is:global>

	html {
	  font-family: system-ui, sans-serif;
	  scroll-behavior: smooth;
	}

	body {
	  overscroll-behavior: none;
	}

	@media (prefers-reduced-motion: reduce) {
	  html {
		scroll-behavior: auto;
	  }
	}

</style>
