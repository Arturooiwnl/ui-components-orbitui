---
import {description, siteName, imageMetaAlt} from './constLayout'

import '@fontsource/audiowide';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/icon.webp" />
	<meta name="description" content={description}/>
	<meta property="og:title" content={siteName} />
	<meta property="og:type" content="website" />
	<meta property="og:url" content="https://ui-components-orbitui.vercel.app/" />
	<meta property="og:locale" content="es" />
	<meta property="og:description" content={description}/>
	<meta property="og:site_name" content={siteName} />
	<meta property="og:image" content="https://ui-components-orbitui.vercel.app/og/og.png" />
	<meta property="og:image:alt" content={imageMetaAlt} />
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:site" content="@ArturoPerotto" />
	<meta name="twitter:title" content={siteName} />
	<meta name="twitter:description" content={description}/>
	<meta name="twitter:image" content="https://ui-components-orbitui.vercel.app/og/og.png" />
	<meta name="twitter:image:alt" content={imageMetaAlt} />
	<meta name="robots" content="max-image-preview:large" />
    <title>{title}</title>
</head>
<body class="relative bg-slate-950">
	<div class="fixed inset-0 -z-10 w-full min-h-screen bg-zinc-950">
		<div class="absolute inset-0 [mask-image:linear-gradient(to_left,transparent,black_40%,black_80%,transparent)] [--webkit-mask-image:linear-gradient(to_right,transparent,black_40%,black_80%,transparent)]">
			<div class="absolute inset-0 opacity-30" />
				<svg
					class="w-full h-full"
					width="100%"
					height="100%"
					viewBox="0 0 1920 1080"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
				>
					<g stroke="white" stroke-opacity="0.08">
						<line x1="100" y1="0" x2="100" y2="1080" />
						<line x1="300" y1="0" x2="300" y2="1080" />
						<line x1="550" y1="0" x2="550" y2="1080" />
						<line x1="900" y1="0" x2="900" y2="1080" />
						<line x1="1200" y1="0" x2="1200" y2="1080" />
						<line x1="1450" y1="0" x2="1450" y2="1080" />
						<line x1="1700" y1="0" x2="1700" y2="1080" />
						<line x1="0" y1="80" x2="1920" y2="80" />
						<line x1="0" y1="220" x2="1920" y2="220" />
						<line x1="0" y1="400" x2="1920" y2="400" />
						<line x1="0" y1="700" x2="1920" y2="700" />
						<line x1="0" y1="950" x2="1920" y2="950" />
					</g>
				</svg>
		  </div>
	</div>
	<main>
		<slot />
	</main>
</body>
</html>

<style is:global>

	html {
	  font-family: system-ui, sans-serif;
	  scroll-behavior: smooth;
	}

	body {
	  overscroll-behavior: none;
	}

	@media (prefers-reduced-motion: reduce) {
	  html {
		scroll-behavior: auto;
	  }
	}

</style>
