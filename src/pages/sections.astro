---
import SectionsCard from "@/components/SectionsCard.astro"
import Layout from '@/layouts/LayoutComponents.astro';
import Sidebar from '@/components/home/Sidebar.astro';

import { sectionsBlocksData } from "@/data/sectionsBlocksData";
---

<Layout title="UIComponentes - @OrbitUI | Sections">
  <Sidebar currentPage='sections'/>
  <section class="px-12 py-10">
    <header class="flex flex-col gap-2 items-center mb-20">
      <h1 class="text-3xl md:text-5xl font-bold text-center title-gradient-text font-audiowide">
        Sections
      </h1>
      <p class="text-gray-300 font-semibold text-center">
       Explore section templates for your next website.
      </p>
    </header>
    <section class="max-w-7xl mx-auto columns-1 lg:columns-2 gap-6 space-y-4">
      {sectionsBlocksData.map((comp) => (
          <SectionsCard target={comp.id}>
            <img width="auto" height="auto" class="rounded-2xl w-full aspect-[16/9] object-cover" src={comp.img}/>
          </SectionsCard> 
        ))} 
    </section>
  </section>
</Layout>